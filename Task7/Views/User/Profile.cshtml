
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Profile</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name:
        </dt>
        <dd class="col-sm-10">
            @Context.Session.GetString("UserName")
        </dd>
        <dt class="col-sm-2">
            Email:
        </dt>
        <dd class="col-sm-10">
            @Context.Session.GetString("UserEmail")
        </dd>

        <dt class="col-sm-2">
            Role:
        </dt>
        <dd class="col-sm-10">
            @Context.Session.GetString("UserRole")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-email="@Context.Session.GetString("UserEmail")">Edit</a>
</div>
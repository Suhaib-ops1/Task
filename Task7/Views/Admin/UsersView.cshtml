@model IEnumerable<Task7.Models.User>

@{
    ViewData["Title"] = "UsersView";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>UsersView</h1>

<p>
    <a asp-action="UsersCreate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                <a asp-action="UsersEdit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="UsersDetails" asp-route-id="@item.Id">Details</a> |
                <a asp-action="UsersDelete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
